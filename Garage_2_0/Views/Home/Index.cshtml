@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Garage 2.5</h1>
    <p class="lead">Garage is a web framework for parking your vehicle using MVC. HTML, CSS and JavaScript</p>
    @Html.ActionLink("Check in vehicle", "CheckIn", "ParkedVehicles", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <img class="img-responsive" src="~/Images/logoCar.png" />
        <article>
            <p>
                In just a few minutes time, you will be up and running with Garage 2.5. Our flexible parking system will 
                help you to manage your parking using a very user friendly website.
                
            </p>
        </article>
        <p>@Html.ActionLink("Overview", "Index", "ParkedVehicles", new { area = "" }, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>About</h2>
        <img class="img-responsive" src="~/Images/logoCar.png" />
        <article>
            <p>
                Garage 2.5 is the market leader of internet based parking solutions.
                Our strong commitment to our customers have resulted in a product of world class quality.

            </p>
        </article>
        <p>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Contact</h2>
        <img class="img-responsive" src="~/Images/logoCar.png" />
        <article>
            <p>
                Our customer support will answer all the questions you have regarding Garage 2.5.
                Contact us now and find out how our solution will benefit your business.

            </p>
        </article>
        <p>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "btn btn-default" })</p>
    </div>
</div>